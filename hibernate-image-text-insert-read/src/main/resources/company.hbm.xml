<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="xml.entities.Company">
        <id name="companyId">
            <generator class="increment"/>
        </id>
        <property name="image" length="1000000"/>
        <property name="resume" length="1000000"/>
    </class>
</hibernate-mapping>